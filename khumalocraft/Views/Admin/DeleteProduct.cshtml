@model khumalocraft.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<p>Are you sure you want to delete the following product?</p>
<div>
    <h4>Name: @Model.Name</h4>
    <h4>Description: @Model.Description</h4>
    <h4>Price: @Model.Price</h4>
    <h4>Category: @Model.Category</h4>
    <h4>Availability: @Model.Availability</h4>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageProducts" class="btn btn-secondary">Cancel</a>
    </form>
</div>